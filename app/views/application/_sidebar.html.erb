<div id="sidebar">
  <%= yield :sidebar %>
  <div class="sidebar-block">
    <h2><%= t('categories') %></h2>
    <ul class="tags_list vertical-list">
      <% @enabled_tags.sort { |a, b| a.name <=> b.name }.each do |tag| %>
        <li>
          <%= link_to tag.name.humanize, tag_path(tag),
            class: active_link?(tag_url(tag, only_path: true)) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
