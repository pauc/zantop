    <th><%= t 'title', scope: 'simple_form.labels.defaults' %></th>
    <th><%= t 'description', scope: 'simple_form.labels.defaults' %></th>
    <th><%= t 'techniques', scope: 'simple_form.labels.defaults' %></th>
    <th><%= t 'dimensions', scope: 'simple_form.labels.defaults' %></th>
