<%= simple_nested_form_for action_work, html: { multipart: true } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :tag_tokens, label: "Tags:",
    input_html: { :'data-locale' => I18n.locale,
                  :'data-preload' => action_work.tags.to_json } %>
  <fieldset>
    <legend>Imatges i v√≠deos</legend>
    <%= f.fields_for :images %>
    <p><%= f.link_to_add "Add an image", :images %></p>
  </fieldset>
  <%= f.input :place %>
  <%= f.input :realization_date %>
  <%= f.input :published %>
  <%= f.button :submit %>
<% end %>
